{% extends 'MLTicketingBundle::layout.html.twig' %}

{% block title %} Réservation {{ parent() }}{% endblock %}

{%  block booking %}

    <div class="row">
        <div class="col-xs-12">
            <h1>Réservez vos billets !</h1>
            <div class="jumbotron">
                <h2>Informations complémentaires pour la réservation en ligne.</h2>
                <p>Deux types de billets sont disponibles à la vente : le billet « Journée » et le billet « Demi-journée ». Ce dernier ne permet de rentrer qu’à partir de 14h00.</p>
            </div>
        </div>
    </div>
    <div class="col-md-offset-3 col-md-6 well">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {{ form_errors(form) }}

        {{ form_row(form.email) }}

        <div class="form-group">

            {{ form_label(form.ticket_number, "Tickets") }}

            {{ form_errors(form.ticket_number) }}

            {{ form_widget(form.ticket_number) }}

        </div>

        {{ form_rest(form) }}

        {{ form_end(form) }}
    </div>

{% endblock %}